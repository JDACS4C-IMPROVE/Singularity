Bootstrap: docker
From: tensorflow/tensorflow:2.4.2-gpu

%labels
	MAINTAINER	Jamie Overbeek
%setup
	mkdir $SINGULARITY_ROOTFS/build
	cp src/Singularity_gpu_fix.sh $SINGULARITY_ROOTFS/build

%environment
	PATH=$PATH:$SINGULARITY_ROOTFS/build/HiDRA
	MODEL_DIR=$SINGULARITY_ROOTFS/build/HiDRA

%post
    apt-get install wget
    apt-key adv --keyserver keyserver.ubuntu.com --recv-keys F60F4B3D7FA2AF80
    apt-key adv --keyserver keyserver.ubuntu.com --recv-keys A4B469963BF863CC
    apt-get update
    apt-get install -y git
    cd $SINGULARITY_ROOTFS/build
    chmod +x Singularity_gpu_fix.sh
    ./Singularity_gpu_fix.sh
    rm Singularity_gpu_fix.sh
    pip install git+https://github.com/ECP-CANDLE/candle_lib@candle_data_dir
    git clone -b develop https://github.com/JDACS4C-IMPROVE/HiDRA.git
    pip install pandas==1.1.5
    pip install openpyxl==3.0.9
    pip install scikit-learn==0.24.2
    chmod +x HiDRA/test.sh
   
  
